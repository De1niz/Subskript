@model Tuple<List<string>, List<SubsKript.Models.Subscription>>
@{
    ViewBag.Title = "Abonelikler";
    var platformlar = Model.Item1;
    var abonelikler = Model.Item2;
}

<h2>Aboneliklerim</h2>

@foreach (var platform in platformlar)
{
    <form method="post" action="/Stripe/Subscribe?userId=@ViewBag.UserId">
        <input type="hidden" name="platform" value="@platform" />
        <button type="submit" class="btn btn-primary">Abone Ol - @platform</button>
    </form>
}

@if (abonelikler != null && abonelikler.Count > 0)
{
    <table border="1" cellpadding="10">
        <thead>
        <tr>
            <th>Platform</th>
            <th>Tutar (₺)</th>
            <th>Durum</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var sub in abonelikler)
        {
            <tr>
                <td>@sub.Platform</td>
                <td>@sub.Amount</td>
                <td>@sub.Status</td>
                <td>@sub.StartDate</td>
                <td>@sub.EndDate</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Hiç aboneliğin yok.</p>
}